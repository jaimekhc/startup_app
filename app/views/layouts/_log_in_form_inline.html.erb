<%= simple_form_for resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-inline'} do |f| %>

	<% if params[:continue] %>
      <%= f.hidden_field :continue, :value => params[:continue] %>
  	<% end %>

	<%= f.input_field :email, :class => 'input-medium', :placeholder => 'Email' %>
	<%= f.input_field :password, :class => 'input-medium', :placeholder => 'Password' %>
	<%= submit_tag "Log in", :class => 'btn btn-primary' %>

	<div class="row">
		<div class="span2">
		  <% if devise_mapping.rememberable? -%>
			<%= f.input :remember_me, :as => :boolean, :wrapper => :checkbox, :inline_label => "Yes, Remember Me", :label => false %>
		  <% end %>
		</div>
		<div class="span2">
			<%= link_to "Forgot your password?", new_password_path(resource_name)%>
		</div>
	</div>

<% end %>